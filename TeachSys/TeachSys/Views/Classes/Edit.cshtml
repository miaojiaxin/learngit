@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
   
</head>
<body>
    <div>
        <form id="classes_edit_form">
            <input type="hidden" id="classes_edit_classid" value="@Model.ID" name="ID" />
            <div class="input_line">
                <label class="leftlabel">班级名称：</label><input class="easyui-textbox" value="@Model.Name" name="Name" id="classes_edit_name" data-options="prompt:'请输入班级名称'">
            </div>
            <div class="input_line">
                <label class="leftlabel">班主任：</label><input id="classes_edit_director" name="TeacherID" />
            </div>
        </form>
    </div>
    <script>
        $(function () {
            $("#classes_edit_director").combobox({
                url: "/teachers/getteacherslist",
                valueField: 'ID',
                textField: "Name"
            });
            $("#classes_edit_director").combobox("setValue", "@Model.TeacherID");
        });
    </script>

</body>
</html>

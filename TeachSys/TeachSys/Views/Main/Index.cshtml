@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>系部日常办公协同管理平台</title>
    <link rel="stylesheet" href="/content/login/css/login.css" />
    <link href="~/jquery-easyui-1.5.1/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/jquery-easyui-1.5.1/themes/icon.css" rel="stylesheet" />
    <script>
        function setContentHeight() {
            var web_subnav = document.getElementById("login_bj");
            //	        var height = document.documentElement.clientHeight - 40 - document.getElementById("web-topbd").offsetHeight;
            web_subnav.style.height = document.documentElement.clientHeight + 'px';
        }
        window.onload = setContentHeight;
        window.onresize = setContentHeight;
    </script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/jquery-easyui-1.5.1/jquery.easyui.min.js"></script>
    <script>
        $(function () {
            $(".submit").click(function () {
                var user = $(".admin").val();
                var pass = $(".passWord").val();
                $.get("/main/login", {username:user,password:pass,role:$(":radio[name='o']").val()}, function (data) {//ok:登录成功，其它：失败
                    if (data == "ok") {
                        location.href = "/main/main";
                    }
                    else
                        alert("登录失败！");
                }, "text");
            });
        });
    </script>
</head>
<body>
    <!--<div id="login_bj">-->
    <div id="login">
        <div class="logo"></div>
        <div class="login_box">
            <input class="admin" type="text" />
            <input class="passWord" type="password" />
            <input class="submit" type="button" />
            
            <div class="clear"></div>
            <div style="font-size:20px;color:white;margin:0 -100px 0 0"><input type="radio" value="t" name="o" id="teacher" /><label for="teacher">教师</label> <input name="o" type="radio" value="s" id="student" /><label for="student">学生</label></div>
        </div>
    </div>
    <div id="copyright">技术支持：河北软件职业技术学院 软件工程系</div>
    <!--</div>-->
</body>
</html>
